<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_booked"
        android:name="com.example.hotels.ui.booked.BookedFragment"
        android:label="@string/title_booked"
        tools:layout="@layout/fragment_booked" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.hotels.ui.home.HomeFragment"
        android:label="@string/title_hotels"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.hotels.ui.notifications.NotificationsFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_notifications" />
</navigation>